<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.se_project.DeleteCustomerViewController"
          prefHeight="400.0" prefWidth="600.0">
    <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>

    <Text GridPane.rowIndex="0"
          GridPane.columnIndex="0"
          text="Select Customer to delete: "/>
    <ComboBox fx:id="customersComboBox"
              GridPane.columnIndex="1"
              GridPane.rowIndex="0"
              />
    <Button fx:id="deleteCustomerButton"
            text="Delete customer"
            GridPane.columnIndex="0"
            GridPane.rowIndex="1"
            onAction="#onDeleteCustomerButtonClick"/>
    <Label fx:id="message"
           GridPane.columnIndex="1"
           GridPane.rowIndex="1"
           textFill="red"/>
    <Button fx:id="backToMainButton"
            text="Back to main menu"
            GridPane.columnIndex="0"
            GridPane.rowIndex="2"
            onAction="#onBackToMainButtonClick"/>
</GridPane>
