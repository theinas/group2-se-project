<GridPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.se_project.OwnerViewController"
            prefHeight="400.0" prefWidth="600.0">
    <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
    <Button fx:id="createCustomerButton"
            GridPane.columnIndex="0"
            GridPane.rowIndex="0"
            text="Create Customer Profiles"
            onAction="#onCreateCustomerButtonClick"
            />
    <Button fx:id="editCustomerButton"
            GridPane.columnIndex="1"
            GridPane.rowIndex="0"
            text="Edit Customer Profiles"
            onAction="#onEditCustomerButtonClick"
            />

    <Button fx:id="deleteCustomerButton"
            GridPane.columnIndex="0"
            GridPane.rowIndex="2"
            text="Delete Customer Profiles"
            onAction="#onDeleteCustomerButtonClick"
            />

    <Button fx:id="searchCustomerButton"
            GridPane.columnIndex="1"
            GridPane.rowIndex="2"
            text="Search for a Customer Profile"
            onAction="#onSearchCustomerButtonClick"
    />

    <Button fx:id="DisplayAllItemsButton"
            GridPane.columnIndex="0"
            GridPane.rowIndex="3"
            text="Display all available items"
            onAction="#onDisplayAllItemsButtonClick"
    />

</GridPane>
