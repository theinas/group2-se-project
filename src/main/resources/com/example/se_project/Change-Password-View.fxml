<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>

<GridPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.se_project.ChangePasswordViewController"
            prefHeight="400.0" prefWidth="600.0">
    <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>


    <Text text="User ID:"
          GridPane.columnIndex="0"
          GridPane.rowIndex="0"/>
    <TextField fx:id="uidTextField"
               GridPane.columnIndex="1"
               GridPane.rowIndex="0"/>

    <Text text="Old Password:"
          GridPane.columnIndex="0"
          GridPane.rowIndex="1"/>
    <TextField fx:id="oldPassTextField"
               GridPane.columnIndex="1"
               GridPane.rowIndex="1"/>

    <Text text="New Password:"
          GridPane.columnIndex="0"
          GridPane.rowIndex="2"/>
    <TextField fx:id="newPassTextField"
               GridPane.columnIndex="1"
               GridPane.rowIndex="2"/>

    <Text text="Confirm Password:"
          GridPane.columnIndex="0"
          GridPane.rowIndex="3"/>
    <TextField fx:id="confirmPassTextField"
               GridPane.columnIndex="1"
               GridPane.rowIndex="3"/>

    <Button fx:id="confirmButton"
            GridPane.columnIndex="0"
            GridPane.rowIndex="4"
            text="Confirm"
            onAction="#confirmButtonOnClick"/>
    <Label fx:id="error"
           GridPane.columnIndex="1"
           GridPane.rowIndex="4"
           textFill="red"/>

    <Button fx:id="backToMainButton"
            text="Back to main menu"
            GridPane.columnIndex="0"
            GridPane.rowIndex="5"
            onAction="#onBackToMainButtonClick"/>

    <Button fx:id="logoutButton"
            GridPane.columnIndex="10"
            GridPane.rowIndex="10"
            text="Logout"
            onAction="#onlogoutButtonClick"
    />

</GridPane>
